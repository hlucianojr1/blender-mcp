# Environment Configuration for Blender MCP
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control!

# ============================================
# Blender Connection Settings
# ============================================
# Host where Blender is running (default: localhost)
# Use 'host.docker.internal' when running in Docker
BLENDER_HOST=localhost

# Port for Blender socket server (default: 9876)
BLENDER_PORT=9876

# ============================================
# Telemetry Settings (Optional)
# ============================================
# Disable anonymous telemetry (set to 'true' to disable)
# Telemetry helps improve the tool by tracking usage patterns
# No personal data or prompts are collected by default
DISABLE_TELEMETRY=true

# Alternative ways to disable telemetry
# BLENDER_MCP_DISABLE_TELEMETRY=true
# MCP_DISABLE_TELEMETRY=true

# Supabase configuration (only needed if telemetry is enabled)
# These should be provided by the project maintainers
BLENDER_MCP_SUPABASE_URL=
BLENDER_MCP_SUPABASE_ANON_KEY=

# Optional: Enable prompt text collection (disabled by default for privacy)
BLENDER_MCP_COLLECT_PROMPTS=false

# Optional: Maximum prompt length if collection is enabled
BLENDER_MCP_MAX_PROMPT_LENGTH=500

# ============================================
# API Keys for External Services
# ============================================
# Note: These are typically entered via the Blender addon UI,
# not through environment variables. Listed here for reference.

# Hyper3D Rodin API Key
# Get yours from: https://hyperhuman.deemos.com/ or https://fal.ai
# HYPER3D_API_KEY=your_api_key_here

# Sketchfab API Token
# Get yours from: https://sketchfab.com/settings/password
SKETCHFAB_API_KEY=de8d5bbb4d13475db424a22e2edd6599

# Tencent Hunyuan3D Credentials (for official API mode)
# Get yours from: https://cloud.tencent.com
# HUNYUAN3D_SECRET_ID=your_secret_id_here
# HUNYUAN3D_SECRET_KEY=your_secret_key_here

# Hunyuan3D Local API URL (for local API mode)
# HUNYUAN3D_API_URL=http://localhost:8081

# ============================================
# Security Notes
# ============================================
# 1. Never commit API keys or secrets to version control
# 2. Keep this .env file private and secure
# 3. Rotate keys regularly
# 4. Use different keys for development and production
# 5. Store API keys entered in Blender UI securely - they may be saved in .blend files
